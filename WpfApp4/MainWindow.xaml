        <TextBlock Text="A4 =" Grid.Row="4"  Margin="16,57,396,161" FontSize="14" FontFamily="Candara" Grid.ColumnSpan="2"/>
        <TextBox x:Name="TbAnswer_Copy1" Grid.Row="4" Margin="47,57,16,161" Background="#FFFACD" Grid.ColumnSpan="2"/>
